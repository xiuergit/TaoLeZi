<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/mHomeList"
        android:name="com.xiuer.taolezi.Home.HomeItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <!--tools:context="com.xiuer.taolezi.Home.HomeItemFragment"-->
    <!--tools:listitem="@layout/fragment_homeitem"-->

      <com.wang.avi.AVLoadingIndicatorView
         android:id="@+id/mLoading"
          android:paddingHorizontal="120dp"
          android:paddingVertical="160dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          style="@style/AVLoadingIndicatorView"
           android:visibility="visible"
           android:layout_gravity="center"
            app:indicatorName="LineScalePulseOutIndicator"
            app:indicatorColor="@color/colorMain"
          />

</FrameLayout>

