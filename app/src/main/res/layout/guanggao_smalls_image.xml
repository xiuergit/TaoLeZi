<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
<TextView
    android:id="@+id/ad_WENZI"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="权侵朝野"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="10dp"/>
<FrameLayout
android:id="@+id/mImages"
android:layout_below="@id/ad_WENZI"
android:layout_width="match_parent"
android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/smallimages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mImage1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:background="@color/white"/>
        <ImageView

            android:id="@+id/mImage2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView

            android:id="@+id/mImage3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>

<TextView
android:layout_alignParentRight="true"
android:layout_alignRight="@id/ad_WENZI"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="广告"
android:padding="1dp"
android:textColor="@color/colorLine"
android:background="@drawable/frame_back_white_boder"/>

</RelativeLayout>



