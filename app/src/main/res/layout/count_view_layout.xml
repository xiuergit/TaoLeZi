<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/root_ReadCommentCount"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/root_CMContext"
    android:layout_marginTop="5dp"
>
<TextView
    android:id="@+id/mCMReadCount"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:text="3阅读"
    android:textColor="@color/colorCountText"
   />
<TextView
    android:id="@+id/mCMCommentCount"
    android:paddingLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="3评论"
    android:textColor="@color/colorCountText"
    android:layout_toRightOf="@id/mCMReadCount"
   />
<TextView
    android:id="@+id/mCMLastTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="3月前"
    android:textColor="@color/colorCountText"
    android:layout_marginRight="20dp"
    android:layout_alignParentRight="true"
    />
    <TextView
        android:id="@+id/line"
        android:layout_below="@id/mCMReadCount"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/homeLine"
        />


    <!--评论内容-->
    <LinearLayout
        android:id="@+id/mCommentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:orientation="vertical">
     <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            android:id="@+id/mCommentOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user1："
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/mCommentOneContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorCountText"
            android:text="哈哈哈"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mCommentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textColor="@color/black"
            android:text="user2："
            />
        <TextView
            android:id="@+id/mCommentTwoContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorCountText"
            android:text="哈哈哈"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"

            />
    </LinearLayout>
    <LinearLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/mCommentThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user3:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/mCommentThreeContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorCountText"
            android:text="哈哈哈"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"

            />
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/homeLinesolid"
            />
    </LinearLayout>



</RelativeLayout>