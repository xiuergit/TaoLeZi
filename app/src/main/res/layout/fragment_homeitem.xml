<?xml version="1.0" encoding="utf-8"?>

<!--首页 每一项 item view-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

 <!--用户信息-->
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/mUserMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp">
        <ImageView
            android:id="@+id/mUMImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
             />
        <TextView
            android:id="@+id/mUMName"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mUMImage"
            />
        <TextView
            android:id="@+id/mUMTime"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mUMName"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorLine"
            android:layout_toRightOf="@id/mUMImage"
            />
    </RelativeLayout>


<!--详细内容-->
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/mContextMessage"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">
       <FrameLayout
           android:id="@+id/root_CMContext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:id="@+id/root_CMContextISAD"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/mCMContext"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/app_name"
                   android:maxLines="3"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   android:gravity="center_vertical"
                   />
               <ImageView
                   android:id="@+id/mCMImage"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/placeholder"
                   />

               <ImageView
                   android:id="@+id/mCMImageBanner"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/placeholder"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/root_CMContextNoAD"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/mCMContext1"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="@string/app_name"
                   android:maxLines="3"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   />
               <ImageView
                   android:id="@+id/mCMImage1"
                   android:padding="0dp"
                   android:layout_width="96dp"
                   android:layout_gravity="center_vertical"
                   android:layout_height="72dp"
                   android:layout_alignParentEnd="true"
                   android:background="@drawable/placeholder"
                />
           </LinearLayout>

       </FrameLayout>



        <RelativeLayout
            android:id="@+id/root_ReadCommentCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/root_CMContext"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/mCMReadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3阅读"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorLine"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/mCMCommentCount"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3评论"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/colorLine"
                android:layout_toRightOf="@id/mCMReadCount"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/mCMLastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3月前"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorSmallText"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


    </RelativeLayout>
    <TextView
        android:layout_below="@id/mCommentMessage"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/homeLine"
        />
    <!--评论内容-->
    <LinearLayout
        android:id="@+id/mCommentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">
            <TextView
                android:id="@+id/mCommentOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user1："
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/mCommentOneContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLine"
                android:text="哈哈哈"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"

                />
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mCommentTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                    android:textColor="@color/black"
                    android:text="user2："
                    />
                <TextView
                    android:id="@+id/mCommentTwoContext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLine"
                    android:text="哈哈哈"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"

                    />
            </LinearLayout>
                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:id="@+id/mCommentThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user3:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/mCommentThreeContext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLine"
                        android:text="哈哈哈"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"

                        />
                </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/homeLinesolid"
            />
    </LinearLayout>
</LinearLayout>
